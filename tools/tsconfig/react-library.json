{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "Bundler"
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}
